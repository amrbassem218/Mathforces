{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "types/vite-env.d.ts"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "lib": [
        "es5", "es6", "dom", "dom.iterable"
    ],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
  },
  "ts-node": {
    "esm": true
  }
}
